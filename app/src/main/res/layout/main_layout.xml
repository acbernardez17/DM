<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Spinner
            android:id="@+id/sp_perfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/border_spinner"/>

    </LinearLayout>

    <ListView
        android:id="@+id/list_icons"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:layout_weight=".5"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fbtn_add"
        app:fabSize="normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:focusable="true"
        android:clickable="true"
        android:backgroundTint="@color/blue"
        android:tint="@android:color/background_light"
        app:srcCompat="@android:drawable/ic_input_add" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:backgroundTint="@color/blue">

        <ImageButton
            android:id="@+id/btn_home"
            android:layout_width="30dp"
            android:layout_height="60dp"
            android:scaleType="centerInside"
            android:src="@drawable/home_icon_svg"
            android:layout_weight="1"/>

        <ImageButton android:id="@+id/btn_stat"
            android:layout_width="30dp"
            android:layout_height="60dp"
            android:scaleType="centerInside"
            android:src="@drawable/stats_icon_svg"
            android:layout_weight="1"
            />
        <ImageButton
            android:id="@+id/btn_profile"
            android:layout_width="30dp"
            android:layout_height="60dp"
            android:scaleType="centerInside"
            android:src="@drawable/profile_icon_svg"
            android:layout_weight="1"
            />
    </LinearLayout>

</LinearLayout>